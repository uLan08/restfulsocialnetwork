<plugin name='spring-security-rest' version='1.5.2' grailsVersion='2.0 &gt; *'>
  <author>Alvaro Sanchez-Mariscal</author>
  <authorEmail>alvaro.sanchezmariscal@gmail.com</authorEmail>
  <title>Spring Security REST Plugin</title>
  <description>Implements authentication for REST APIs based on Spring Security. It uses a token-based workflow</description>
  <documentation>http://alvarosanchez.github.io/grails-spring-security-rest/</documentation>
  <type>SpringSecurityRestGrailsPlugin</type>
  <resources>
    <resource>DefaultRestSecurityConfig</resource>
    <resource>RestOauthUrlMappings</resource>
    <resource>grails.plugin.springsecurity.rest.RestOauthController</resource>
    <resource>grails.plugin.springsecurity.rest.JwtService</resource>
    <resource>grails.plugin.springsecurity.rest.RestOauthService</resource>
  </resources>
</plugin>